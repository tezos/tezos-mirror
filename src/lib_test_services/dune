(library
 (name tezos_test_services)
 (public_name tezos-test-services)
 (libraries tezos-base tezos-stdlib-unix alcotest-lwt)
 (flags
  (:standard -linkall -open Tezos_base__TzPervasives)))

(rule
 (alias runtest_lint)
 (deps
  (glob_files *.ml{,i}))
 (action
  (run %{lib:tezos-tooling:lint.sh} %{deps})))
