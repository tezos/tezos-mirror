(library
 (name tezos_crypto)
 (public_name tezos-crypto)
 (flags (:standard -open Tezos_stdlib
                   -open Data_encoding
                   -open Tezos_error_monad
                   -open Tezos_error_monad.TzLwtreslib
                   -open Tezos_rpc))
 (libraries data-encoding
            tezos-lwt-result-stdlib
            lwt
            ; Check src/bin_node/dune for a short explanation of this
            ; use of select for optional linking.  Also, this needs to
            ; remain above `hacl-star' in order to avoid linking
            ; errors.
            (select haclcompat from
              (hacl_x25519 -> haclcompat.empty)
              (-> haclcompat.empty))
            hacl-star
            bls12-381
            secp256k1-internal
            tezos-error-monad
            tezos-rpc
            tezos-stdlib
            uecc
            ringo
            zarith))

(rule
  (target haclcompat-empty)
  (action (write-file %{target} "")))

(rule
 (alias runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
