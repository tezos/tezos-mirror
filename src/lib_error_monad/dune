(library
 (name tezos_error_monad)
 (public_name tezos-error-monad)
 (flags (:standard -open Tezos_stdlib
                   -open Tezos_data_encoding
                   ))
 (libraries tezos-stdlib
            tezos-data-encoding
            lwt))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
