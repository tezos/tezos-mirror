(tests
 (names test_proxy test_fuzzing_proxy_getter test_light test_fuzzing_light)
 (package tezos-proxy)
 (libraries
  tezos-base
  tezos-base.unix
  tezos-stdlib-unix
  tezos-proxy
  tezos-base-test-helpers
  tezos-test-helpers
  tezos-shell-services-test-helpers
  qcheck-alcotest
  alcotest-lwt)
 (flags
  (:standard -open Tezos_base__TzPervasives
             -open Tezos_base_test_helpers)))

(rule
 (alias runtest_proxy)
 (action
  (run %{exe:test_proxy.exe})))

(rule
 (alias runtest_proxy_fuzzing)
 (action
  (run %{exe:test_fuzzing_proxy_getter.exe})))

(rule
 (alias runtest_light)
 (action (run %{exe:test_light.exe})))

(rule
 (alias runtest_fuzzing_light)
 (action (run %{exe:test_fuzzing_light.exe})))
