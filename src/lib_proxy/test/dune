(executables
 (names test_proxy test_fuzzing_proxy_getter)
 (libraries
  tezos-base
  tezos-base.unix
  tezos-stdlib-unix
  tezos-proxy
  tezos-test-services
  crowbar
  lib-test
  qcheck-alcotest
  alcotest-lwt)
 (flags
  (:standard -open Tezos_base__TzPervasives -open Tezos_test_services)))

(rule
 (alias runtest_proxy)
 (action
  (run %{exe:test_proxy.exe})))

(rule
 (alias runtest_proxy_fuzzing)
 (action
  (run %{exe:test_fuzzing_proxy_getter.exe})))

(rule
 (alias runtest)
 (package tezos-proxy)
 (deps
  (alias runtest_proxy)
  (alias runtest_proxy_fuzzing))
 (action progn))
